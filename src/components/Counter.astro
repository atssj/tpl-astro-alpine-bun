<div x-data="{ count: 0 }" class="space-y-4">
  <button 
    @click="count++"
    class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors"
    x-text="`Count: ${count}`"
  ></button>
  
  <p x-show="count > 5" class="text-red-500 font-medium">
    Warning: Count exceeds 5!
  </p>
</div>